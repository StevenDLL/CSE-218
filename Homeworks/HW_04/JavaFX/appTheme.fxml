<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/15.0.1"
            xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <BorderPane prefHeight="400.0" prefWidth="600.0">
            <top>
                <MenuBar BorderPane.alignment="CENTER">
                    <menus>
                        <Menu mnemonicParsing="false" text="File">
                            <items>
                                <MenuItem mnemonicParsing="false" text="Close"/>
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Help">
                            <items>
                                <MenuItem mnemonicParsing="false" text="About"/>
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
            </top>
            <center>
                <Pane prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #141f27;"
                      BorderPane.alignment="CENTER">
                    <children>
                        <TextField fx:id="startingWord" layoutX="146.0" layoutY="11.0" prefHeight="39.0"
                                   prefWidth="218.0" promptText="The, Man, Roads, etc...">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </TextField>
                        <TextField fx:id="sentenceLength" editable="false" layoutX="447.0" layoutY="11.0"
                                   prefHeight="39.0" prefWidth="141.0" promptText="1, 2, 3, 4, etc...">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </TextField>
                        <Label layoutX="15.0" layoutY="18.0" text="Starting Word:" textAlignment="CENTER"
                               textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="18.0"/>
                            </font>
                        </Label>
                        <Label layoutX="373.0" layoutY="16.0" text="Length:" textAlignment="CENTER" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="18.0"/>
                            </font>
                        </Label>
                        <Label layoutX="14.0" layoutY="137.0" text="Output" textAlignment="CENTER" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="18.0"/>
                            </font>
                        </Label>
                        <TextArea fx:id="outputTextArea" editable="false" layoutX="12.0" layoutY="164.0"
                                  prefHeight="200.0" prefWidth="576.0"
                                  promptText="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </TextArea>
                        <Button fx:id="generateButton" layoutX="13.0" layoutY="59.0" mnemonicParsing="false"
                                prefHeight="74.0" prefWidth="576.0"
                                style="-fx-background-color: #57cc59;" text="Generate" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="36.0"/>
                            </font>
                        </Button>
                    </children>
                </Pane>
            </center>
        </BorderPane>
    </children>
</AnchorPane>
